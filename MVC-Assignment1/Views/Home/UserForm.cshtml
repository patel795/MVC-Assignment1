@using MVC_Assignment1.Models
@model User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="/Content/Style.css" rel="stylesheet" />
    <title>UserForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>UserForm</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <b>Name:</b>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Your phone:</label>
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                </div>

                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Submit Form" />
                </div>
            }
        </div>

    </div>
</body>
</html>